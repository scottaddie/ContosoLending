@page "/"
@using ContosoLending.Ui.Validation
@inject NavigationManager NavigationManager
@inject Services.LendingService LendingService

<h3>Loan Application</h3>

<EditForm Model="LoanApp" OnValidSubmit="SubmitLoanApp">
    <RecursiveDataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="firstName">First Name:</label>
        <InputText id="firstName" @bind-Value="LoanApp.Applicant.FirstName" class="form-control" />
        <ValidationMessage For="() => LoanApp.Applicant.FirstName" />
    </div>
    <div class="form-group">
        <label for="lastName">Last Name:</label>
        <InputText id="lastName" @bind-Value="LoanApp.Applicant.LastName" class="form-control" />
        <ValidationMessage For="() => LoanApp.Applicant.LastName" />
    </div>
    <div class="form-group">
        <label for="loanAmount">Loan Amount:</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <InputNumber id="loanAmount" @bind-Value="LoanApp.LoanAmount" class="form-control" />
        </div>
        <ValidationMessage For="() => LoanApp.LoanAmount" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    private ViewModels.LoanApplication LoanApp = new ViewModels.LoanApplication();

    private async Task SubmitLoanApp()
    {
        await LendingService.SubmitLoanAppAsync(LoanApp);
        NavigationManager.NavigateTo("/loandashboard");
    }
}
