@page "/"
@namespace ContosoLending.Ui.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ContosoLending.Ui</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    @* TODO: load this CSS, its JS, and jQuery only in the Dashboard component *@
    <link rel="stylesheet" href="~/lib/semantic-ui/dist/semantic.min.css" />
    <link href="css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
    </app>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/semantic-ui/dist/semantic.min.js"></script>
    <script src="_framework/blazor.server.js"></script>
    <script src="~/lib/@@microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/loan-dashboard.js" asp-append-version="true"></script>
</body>
</html>
